{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@Table/*": ["./src/table/*"],
      "@Peoples/*": ["./src/peoples/*"],
      "@Components/*": ["./src/components/*"],
      "@Assets/*": ["./src/assets/*"],
      "@Types/*": ["./src/types/*"],
      "@Configs/*": ["./configs/*"],
      "@Utils/*": ["./utils/*"],
      // Table alliases
      "@TableTypes/*": ["./src/table/types/*"],
      "@TableComponents/*": ["./src/table/components/*"],
      "@TableAssets/*": ["./src/table/assets/*"],
      "@TableUtils/*": ["./src/table/utils/*"]
    },
    "strictNullChecks": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
